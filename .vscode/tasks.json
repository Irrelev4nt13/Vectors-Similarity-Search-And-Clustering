{
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceFolder}"
    },
    "tasks": [
        {
            "type": "shell",
            "label": "clean",
            "command": "make clean",
        },
        {
            "type": "shell",
            "label": "compile-deb-lsh",
            "command": "make deb-lsh",
            "dependsOn": "clean",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "compile-deb-cube",
            "command": "make deb-cube",
            "dependsOn": "clean",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "compile-deb-cluster",
            "command": "make deb-cluster",
            "dependsOn": "clean",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "compile-lsh",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "compile-cube",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "compile-cluster",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "run lsh",
            "command": "make run-lsh",
        },
        {
            "type": "shell",
            "label": "run cube",
            "command": "make run-cube",
        },
        {
            "type": "shell",
            "label": "run cluster",
            "command": "make run-cluster",
        }
    ]
}